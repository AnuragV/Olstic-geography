<body>
  <h1>ðŸ‡®ðŸ‡³ State Click Game</h1>
  <p>Click all Indian states that start with the letter <strong>M</strong></p>

  <!-- Real India SVG map with state IDs -->
  <svg viewBox="100 100 800 800" xmlns="http://www.w3.org/2000/svg" id="indiaMap">
    <!-- These are simplified paths just for demonstration -->
    <!-- For full detail, a full India SVG map file can be used -->
    <path id="Maharashtra" class="state" d="M300,400 L340,400 L340,440 L300,440 Z" />
    <path id="Madhya Pradesh" class="state" d="M360,360 L400,360 L400,400 L360,400 Z" />
    <path id="Manipur" class="state" d="M700,300 L740,300 L740,340 L700,340 Z" />
    <path id="Mizoram" class="state" d="M700,360 L740,360 L740,400 L700,400 Z" />
    <path id="Meghalaya" class="state" d="M650,330 L690,330 L690,370 L650,370 Z" />
    <path id="Gujarat" class="state" d="M200,350 L240,350 L240,390 L200,390 Z" />
    <path id="Kerala" class="state" d="M220,500 L260,500 L260,540 L220,540 Z" />
    <path id="Bihar" class="state" d="M500,300 L540,300 L540,340 L500,340 Z" />
  </svg>

  <script>
    const correctStates = new Set([
      "Maharashtra",
      "Madhya Pradesh",
      "Manipur",
      "Mizoram",
      "Meghalaya"
    ]);

    document.querySelectorAll('.state').forEach(state => {
      state.addEventListener('click', () => {
        const name = state.id;
        if (correctStates.has(name)) {
          state.classList.add('correct');
        } else {
          state.classList.add('incorrect');
        }
      });
    });
  </script>
